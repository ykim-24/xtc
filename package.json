{
  "name": "xtc",
  "version": "0.2.0",
  "type": "module",
  "description": "AI-first IDE wrapper for Claude",
  "main": "dist/electron/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "npm run build:electron && wait-on http://localhost:4321 && NODE_ENV=development electron .",
    "build:electron": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "build": "npm run build:electron && vite build && electron-builder",
    "build:mac": "npm run build:electron && vite build && electron-builder --mac",
    "build:win": "npm run build:electron && vite build && electron-builder --win",
    "build:linux": "npm run build:electron && vite build && electron-builder --linux",
    "publish:mac": "npm run build:electron && vite build && electron-builder --mac --publish always",
    "publish:win": "npm run build:electron && vite build && electron-builder --win --publish always",
    "publish:linux": "npm run build:electron && vite build && electron-builder --linux --publish always",
    "release": "./scripts/publish.sh",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "claude",
    "ide",
    "ai"
  ],
  "author": {
    "name": "ykim",
    "email": "ykim@xtc.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/highlight.js": "^9.12.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.32",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "clsx": "^2.0.0",
    "electron-updater": "^6.6.2",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^1.0.0",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "xterm": "^5.3.0",
    "zustand": "^4.4.7"
  }
}
